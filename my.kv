WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"

    answer: answer
    message: message
    button: button

    GridLayout:
        cols:2
        size: root.width, root.height

        Button:
            text: "<"
            width: root.width/15
            size_hint_x: None
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"
        GridLayout:
            padding : 10,10
            spacing: 10, 10
            cols:1    
            Label:
                id: message
                #color: 1,0,1,1
                text: "WHAT HAVE I SAID?"
            TextInput:
                id: answer
                multinline:False

            Button:
                id: button
                text:"Start Game"
                on_press: root.btn()


